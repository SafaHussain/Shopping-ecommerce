<div class="container" >
<table class="table table-hover">
   <tr><thead  class="table-dark"> 
   <th> Name </th>
    <th> Picture </th> </tr>
        </thead>
    <tr>
    <% @categories.each do |category| %>
    
      <td><%= category.name %></td>
      <% if category.image_url %>
       <td><%=link_to image_tag(category.image.url()) %></td>
      <% end %>
        <td><%= link_to 'Show', admin_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>

</table>
</div>



