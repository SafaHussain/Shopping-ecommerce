 <!DOCTYPE html>
<html>
  <head>
  <style>
 

.active{
      background-color:yellow;
}
.blue{
  background-color:blue;

}

  </style>
  <script>
 $(document).ready(function(){
 $(".link-dark").click(function(){
$('.navbar').find('.active').removeClass('active') 
        $(this).addClass("active");
        
    // if ($(this).siblings().hasClass("active"))
    // {$(this).addClass("blue");}
        
    });
 });
   
 
</script>

   </head>
   <body>
 
 
<nav class="navbar navbar-expand-lg sticky-top" style="background-color: #D3D3D3; height:70px; color:black; " >
  <div class="container-fluid">
  
  <div class="col-md-6">
  </div>
 
  <div class="col-md-2" >
  <label>Products</label>
  <select id="select">

  <% @products=Product.all%>
  <% @products.each do|p|%>
 <option id="opt" value="/admin/products/<%= p.title%>" onclick=abc()><%= p.title %>
 </option>
  <% end %>

    </select>
</div>
    <a class="nav-link active; link-dark col-md-2"  href="/admin/products"  >All Products</a>
      
    <% if user_signed_in?%>
        <div class="col-md-4"> <h4><%= link_to "Logout", destroy_user_session_path, class: "nav-link active; link-dark" ,method: 'delete'%></h4></div>
    <% else %>
    <a class="nav-link active; link-dark col-md-1"  href="/users/sign_in"  >Sign In</a>
    <a class="nav-link active; link-dark col-md-1"  href="/users/sign_up"  >Sign Up</a>
     <% end %>
    
        </ul>

   </div>
</nav>
  
 
</body>
</html>
<script>
function abc(){
    v= document.getElementById('select').value 
  window.location.assign(v);

};
</script>